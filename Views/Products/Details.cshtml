@model CloudPoe.Models.ProductViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">@Model.ProductName</h2>

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageURL" class="img-fluid" alt="@Model.ProductName">
        </div>
        <div class="col-md-6">
            <h4>Description</h4>
            <p>@Model.ProductDesc</p>

            <h4>Price</h4>
            <p><strong>@Model.ProductPrice.ToString("C")</strong></p>

            <a href="#" class="btn btn-success">Buy Now</a>
        </div>
    </div>
</div>
